{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDirs": ["./src"],
    "outDir": "./build",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}